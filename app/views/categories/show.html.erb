<div class="container">
<div id="container">
	<div class="row">	
		<div id="category-name"> 
		 	<h1 id="h1"><%= @category.name %></h1>
		</div>
	 </div>

	 <div class="row" id="card_holder">
		 <% @category.flashcards.each do |card| %>
		 	
		 	<div class="card_holder">
				<div class="card">
			 		
			 		<div class="front">
			 		 	<%= card.term %>  
			 		 	<p class="handClick"><%= image_tag("handclick.png")%></p>

			 		</div>
			 		<div class="back">
			 			<%= card.definition %>
			 			<% unless card.image.nil? %>
			 		 		<%= image_tag(card.image) %>
			 		 	<% end %>
			 		</div>
			 	</div> <!-- ends class card --> 
			  </div> <!-- ends class card_holer -->
		<%end%>	
	</div> <!--ends id card_holder -->
		<table class="nb-buttons">
	<tr>
		<td>
			<div class="row">
				<div class=" back-button">
			<button class="btn" type="button">
					  				Back
			</button>
		</div>
	    </td>
	    <td>
	    	<div class="next">
	    	<button class="btn" type="button">
